{
    "name": "config-default",
    "type": "configuration",
    "environment": "default",
    "routes": {
        "base_dir": "resources/routes",
        "base_file": "main.php"
    },
    "views": {
        "base_dir": "resources/views"
    },
    "storage": {
        "base_dir": "storage",
        "path_is_relative": true
    },
    "logger": {
        "name": "panda",
        "enabled": true,
        "base_dir": "logs",
        "path_is_relative": true,
        "debug": "debug.log",
        "error": "error.log",
        "max_files_count": 2
    },
    "localization": {
        "base_dir": "resources/translations",
        "locale": {
            "default_locale": "en_US"
        },
        "datetime": {
            "default_timezone": "GMT"
        }
    }
}
